<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_green"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/baseline_person_24" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLength="220"
                    android:hint="Description"
                    android:textColorHint="@color/white"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/baseline_alternate_email_24"
                android:drawablePadding="5dp"
                android:hint="Email"
                android:minHeight="48dp"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:hint="First name"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:maxLength="20"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text"
                    android:drawableLeft="@drawable/baseline_person_outline_24"
                    android:hint="Last name"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:maxLength="40"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text"
                    android:drawableLeft="@drawable/baseline_map_24"
                    android:hint="Country"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:maxLength="60"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text"
                    android:drawableLeft="@drawable/baseline_location_city_24"
                    android:hint="City"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:maxLength="60"
                    android:textColorHint="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/profession"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text"
                    android:drawableLeft="@drawable/baseline_computer_24"
                    android:hint="Profession"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:maxLength="60"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/job"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text"
                    android:drawableLeft="@drawable/baseline_work_24"
                    android:hint="Job"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:maxLength="60"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/educationButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/accent_red"
                android:text="Show education info"
                android:textSize="20sp" />

            <Button
                android:id="@+id/callInfoButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/accent_red"
                android:text="Show call info"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/lookingForjob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Looking for job"
                        android:textSize="20sp"/>

                    <RadioButton
                        android:id="@+id/lookingForHire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Looking to hire"
                        android:textSize="20sp"/>

                    <RadioButton
                        android:id="@+id/none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="20sp"/>
                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/SaveButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/accent_red"
                android:text="Save"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

    <!-- 30dp empty space outside the ScrollView -->
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</LinearLayout>
