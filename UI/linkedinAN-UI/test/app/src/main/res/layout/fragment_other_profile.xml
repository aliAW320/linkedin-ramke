<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_green"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/baseline_person_24" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Description"
                android:textColorHint="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:id="@+id/followButton"
                android:backgroundTint="@color/purple"
                android:text="follow"
                android:layout_marginLeft="5dp"
                android:textSize="20sp" />
            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/messageButton"
                android:backgroundTint="@color/purple"
                android:text="message"
                android:textSize="18sp" />
            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/addFriendButton"
                android:backgroundTint="@color/purple"
                android:text="add friend"
                android:layout_marginRight="5dp"
                android:textSize="17sp" />





        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/baseline_person_24"
                android:hint="First name"
                android:minHeight="48dp"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/baseline_person_outline_24"
                android:hint="Last name"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/baseline_map_24"
                android:hint="Country"
                android:minHeight="48dp"
                android:padding="10dp"
                android:paddingLeft="30dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/baseline_location_city_24"
                android:hint="City"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profession"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/baseline_computer_24"
                android:hint="Profession"
                android:minHeight="48dp"
                android:padding="10dp"
                android:paddingLeft="30dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/baseline_work_24"
                android:hint="Job"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/educationButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/accent_red"
            android:text="Show education info"
            android:textSize="20sp" />

        <Button
            android:id="@+id/callInfoButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/accent_red"
            android:text="Show call info"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/jobSituation"
            android:background="@drawable/custom_edit_text"
            android:layout_margin="10dp"
            android:text="Job situation"
            android:padding="5dp"
            android:textSize="20sp"
            android:textAlignment="center"/>
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/backButton"
            android:background="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back to perivios page"
            android:backgroundTint="@color/accent_red"/>



        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
